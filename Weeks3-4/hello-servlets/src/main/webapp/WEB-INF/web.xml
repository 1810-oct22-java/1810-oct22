<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>hello-servlets</display-name>

	<!-- WEB.XML aka Deployment Descriptor is a file with which we configure 
		our web apps. here, we indicate which url-patterns (endpoints) will map requests 
		to respective servlets and configure other details like parameters and when 
		to initialize servlets -->
		
	<!--Servlet Context - parameters applied to every servlet in the context of the container -->
	<context-param>
		<param-name>AppInfo</param-name>
		<param-value>Hello there.  This is an exmaple of servlet context.  This app info
		data will be visible in every servlet that is a part of this application</param-value>
	</context-param>

	<servlet>
		<servlet-name>HelloServlet</servlet-name>
		<servlet-class>com.ex.servlets.HelloServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>HelloServlet</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>hServlet</servlet-name>
		<servlet-class>com.ex.servlets.HelloHttpServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>hServlet</servlet-name>
		<url-pattern>/httpInfo</url-pattern>
	</servlet-mapping>

</web-app>
