<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>project1</display-name>
  
  <context-param>
  	<param-name>AppInfo</param-name>
  	<param-value>Hello there. This is an example of 
  	servlet context. This App Info Data will be visible in every
  	servlet that is a part of this application </param-value>
  </context-param>
  
  
  <servlet>
  	<servlet-name>HS</servlet-name>
  	<servlet-class>com.revature.servlet.MainServlet</servlet-class>
  	
  	<!--  Servlet config = configuration information for a specific servlet
  	 -->
  	 <init-param>
  	 <param-name>secret</param-name>
  	 <param-value>this secret was configured in my web.xml
  	 this is servlet config</param-value>
  	 </init-param>
  	 <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>HS</servlet-name>
  	<url-pattern>/test</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>hServlet</servlet-name>
  	<servlet-class>com.revature.servlet.MainHttpServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>hServlet</servlet-name>
  	<url-pattern>/httpInfo</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>